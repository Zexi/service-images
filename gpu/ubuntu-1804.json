{
    "builders": [{
        "type": "qemu",
        "accelerator": "kvm",
        "qemuargs": [
        ["-m", "2048M"],
        ["-smp", "cpus=1,maxcpus=16,cores=4"],
	["-cpu", "host"],
	["-machine", "accel=kvm"]
        ],
        "disk_interface": "virtio",
        "disk_compression": false,
        "disk_size": 30720,
        "format": "qcow2",
        "net_device": "virtio-net",

        "iso_url": "http://cdimage.ubuntu.com/ubuntu/releases/18.04/release/ubuntu-18.04.2-server-amd64.iso",
        "iso_checksum": "a2cb36dc010d98ad9253ea5ad5a07fd6b409e3412c48f1860536970b073c98f5",
        "iso_checksum_type": "sha256",

        "vm_name": "gpu-ubuntu1804-base",
        "output_directory": "./_output/gpu",

	"headless": true,
	"vnc_bind_address": "0.0.0.0",

        "http_directory": "./gpu/http/",
        "ssh_username": "root",
        "ssh_password": "123@yunion",
        "ssh_timeout": "30m",

        "boot_wait": "10s",
        "boot_command": [
          "<enter><wait>",
          "<f6><esc>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs>",
          "/install/vmlinuz noapic ",
          "initrd=/install/initrd.gz ",
          "auto-install/enable=true ",
          "debconf/priority=critical ",
          "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg",
          "<enter>"
        ],

        "shutdown_command": "echo 'packer' | sudo -S systemctl poweroff"
    }],
    "provisioners": [{
        "type": "shell",
        "scripts": [
            "scripts/ubuntu/install-nvidia-drivers.sh",
            "scripts/ubuntu/remove-netplan.sh",
            "scripts/ubuntu/grub-config.sh",
            "scripts/ubuntu/clean-sshkeys.sh",
            "scripts/ubuntu/cleanup.sh"
        ]
    }]
}

